{
  "name" : "Polynomial",
  "plural" : "Polynomials",
  "attribute_types": {
    "coefficients" : "Boolean",
    "roots" : "Boolean"
  },
  "options":{
     "number_variables":  "Integer",
     "coefficient_type" : {
 							"value": "Number",
 							"default": "Integer"
 						}
  },
  "raw_types":{
     "dense" : "Boolean",
     "sparse" : "Boolean",
     "roots" : "Boolean"
  },
  "size":{
     "variables":  "@options.number_variables",
     "degree"  : {
                   "structure" : ["@size.variables"],
                   "element": {
                      "type" : "Integer"
                   }
                }
  },
  "raw" :
    {
      "roots" :
      {
        "roots" :
          {
              "structure" :["@size.degree"],
              "element": {
                    "type" : "Number"
                }
          }
      },
      "dense":
        {
          "coefficients" :
            {
                "structure" : ["@size.degree"],
                "element": {
        							"type": "@options.coefficient_type",
        							"default": 0
        			  }
            }
        },
      "sparse":
        {
          "coefficients":
            {
              "structure" :["Integer"],
              "element":
                 {
                   "structure" : ["2"],
                   "element" :
                       {
                            "type" : [
                              "Number",
                              {
                                  "structure" : ["@size.variables"],
                                  "element": {
                                      "type" : "Integer"
                                  }
                              }
                          ]
                       }
                 }
            }
        }
   },
   "features" : {
      "number of terms" : {
								"value": "Integer",
								"default": "infinity"
						},
        "label": "String",
        "value": "Type"
   }
}
