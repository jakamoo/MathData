{
  "name" : "Polynomial",
  "plural" : "Polynomials",
  "attributes": {
    "coefficients" : "Boolean",
    "roots" : "Boolean"
  },
  "options":{
     "number_variables":  "Integer",
     "coefficient_type" : {
 							"value": "Number",
 							"default": "Integer"
 						}
  },
  "raw_types":{
     "dense" : "Boolean",
     "sparse" : "Boolean",
     "roots" : "Boolean"
  },
  "size":{
     "variables":  "@options.number_variables",
     "degree"  : {
                   "structure" : {
                     "type": "Tensor",
                     "size": "@size.variables"
                   },
                   {
                         "element": "Integer"
                   }
                }
  },
  "raw" :
    {
      "roots" :
      {
        "roots" :
          {
              "structure" : {
                "type": "Tensor",
                "size": "@size.degree"
                },
              "element": {
                    "type" : "Number"
                }
          }
      }
      "dense":
        {
          "coefficients" :
            {
                "structure" : {
  								"type": "Tensor",
  								"size": "@size.degree"
        			  },
                      "element": {
        							"value": "@options.coefficient_type",
        							"default": 0
        			  }
            }
        },
      "sparse":
        {
          "coefficients":
            {
              "structure" : {
								"type": "Tensor",
								"size": "Integer"
							},
              "element":
                 {
                   "structure" : {
      								"type": "Tensor",
      								"size": "2"
							     },
                   "element" :
                       {
                            "type" : [
                              "Number",
                              {
                                  "structure" : {
                                    "type": "Tensor",
                                    "size": "@size.variables"
                                  },
                                  {
                                        "element": "Integer"
                                  }
                              }
                          ]
                       }
                 }
            }
        }
   },
   "features" : {
      "number of terms" : {
								"value": "Integer",
								"default": "infinity"
						}
   }
}
