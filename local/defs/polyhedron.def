{
  "name" : "Polyhedron",
  "plural" : "Polyhedra",
  "attributes":
      {
         "vertices" : "Boolean",
         "rays" : "Boolean",
         "lines" : "Boolean",
         "inequalities" : "Boolean",
         "equations" : "Boolean"
      },
   "options":{
      "ambient_dimension":  "Integer"
   },
   "raw_types":{
      "hrep":"Boolean",
      "vrep":"Boolean"
   },
   "size":{
      "ambient_dimension":  "@options.ambient_dimension",
      "vertices" : "Integer",
      "rays" : "Integer",
      "lines" : "Integer",
      "inequalities" : "Integer",
      "equations" : "Integer"
   },
   "raw":{
      "hrep":{
         "inequalities":{

            "structure":{
               "dimension":1,
               "size": 2
            },
            "element":{
               "type":[
                  {
                     "structure":{
                        "size": ["@size.inequalities","@size.ambient_dimension"]
                     },
                     "element":{
                        "type":"Number",
                        "default":"0"
                     }
                  },
                  {
                     "structure":{
                        "size": ["@size.inequalities"]
                     },
                     "element":{
                        "type":"Number",
                        "default":"0"
                     }
                  }

               ]
            }

           }
         },
         "equations":{

            "structure":{
               "dimension":1,
               "size": 2
            },
            "element":{
               "type":[
                  {
                     "structure":{
                        "size": ["@size.inequalities","@size.ambient_dimension"]
                     },
                     "element":{
                        "type":"Number",
                        "default":"0"
                     }
                  },
                  {
                     "structure":{
                        "size": ["@size.inequalities"]
                     },
                     "element":{
                        "type":"Number",
                        "default":"0"
                     }
                  }

               ]
            }

           }
         }
      },
      "vrep":{
         "vertices":{
            "structure":{
               "size": ["@size.vertices"]
            },
            "element":{
               "type":"Tensor",
               "size" : ["@size.ambient_dimension"]
            }
         },
         "rays":{
            "structure":{
               "size": ["@size.rays"]
            },
            "element":{
               "type":"Tensor",
               "size" : ["@size.ambient_dimension"]
            }
         },
         "lines":{
            "structure":{
               "size": ["@size.lines"]
            },
            "element":{
               "type":"Tensor",
               "size" : "@size.ambient_dimension"
            }
         },
      }
   },
 "features" : {
    "bounded" : "Boolean"
    "dimension" : "Integer"
 }
}
